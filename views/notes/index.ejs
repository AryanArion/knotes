<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>
<body>
    <%- include('../partials/nav.ejs') %>
    <div class="outer" id="content_wrap">
        <section class="inner">
            <h1>Notatki</h1>
            <% if(notes.length > 0) { %>
                <ul>
                    <% notes.forEach(note => { %>
                        <li>
                            <img src="../resources/new.svg">
                            <a href="/notes/<%= note.id %>"><%= note.title %></a>
                        </li><br>
                    <% }) %>
                </ul>
            <% } else { %>
                <p>Nie ma notatek!</p>
            <% } %>
        </section>
    </div>
    <%- include('../partials/footer.ejs') %>
</body>
</html>